@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CJview</title>
    <link rel="alternate" type="application/rss+xml" title="RSS 2.0" href="http://www.jqueryba.com/rss/" />
    <script type="text/javascript" src="../Content/wx/ZPQ/js/jquery.min.js"></script>
</head>
<body>
    <style>
        .imgdx
        {
            width: 150px;
            height: 150px;
            border-radius: 20%;
        }

        .bg
        {
            width: 100%;
            max-width: 1920px;
            height: auto;
            position: relative;
        }

            .bg img
            {
                width: 100%;
            }

        .box
        {
            width: 80%;
            max-width: 1000px;
            margin: auto;
            text-align: center;
            position: absolute;
            top: 25%;
            left: 0;
            right: 0;
        }
    </style>

    <script type="text/javascript"><!--
    var alldate;
    var allmzdata = '@ViewData["nc"]';

    var alldataarr = '@ViewData["imgurl"]'.split(",")
        var allmzdataarr = allmzdata.split(",")
        var num = alldataarr.length - 1

        var timer
        function change() {
            var N = GetRnd(0, num)
            var html="";
            html += '<table style="margin:auto; width:100%">';
            html += '<tr><td align="center" style="font-size:20px;font-weight:bolder;color:#fff"">' + allmzdataarr[N] + '</td></tr>';
            html += ' <tr><td style="height:20px;"></td></tr>';
            html += '<tr><td align="center" style="font-size:20px"><img src="' + alldataarr[N] + '" class="imgdx"/></td> </tr>';
            html += ' <tr><td style="height:20px;"></td></tr>';
            html += '</table>';
            document.getElementById("oknum").innerHTML = html;
        }
        function start() {
            clearInterval(timer);
            timer = setInterval('change()', 50);  //随机数据变换速度，越小变换的越快 
            $("#s").hide();
            $("#o").show();
        }
        function ok() {
            clearInterval(timer);
            $("#o").hide();
            $("#s").show();
            //document.getElementById("showresult").value = document.getElementById("oknum").innerText;
        }
        function GetRnd(min, max) {
            return parseInt(Math.random() * (max - min + 1));
        }

        function GetsignupinfoNew() {
            var json;
            $.ajax({
                type: "POST",
                url: "/activity/Signupjson",
                dataType: "json",
                async: false,
                success: function (reslut) {
                    json = eval(reslut);

                },
                error: function (e) {
                    alert("网络异常,请重试！");
                }
            })
            return json;
        }

        // --></script>
    <div class="bg">
        <img src="../Content/wx/CJ/img/bg.jpg">
    </div>
    <div class="box">
        <div id="oknum" name="oknum">
            <table style="margin:auto; width:100%">
                <tr>
                    <td align="center" style="font-size:20px; font-weight:bolder;color:#fff">苏州新亚</td>
                </tr>
                <tr><td style="height:40px;"></td></tr>
                <tr>
                    <td>
                         
                    </td>
                </tr>
            </table>
 
        </div>
        <button onclick="start()" accesskey="s"   id="s" style="width: 100px; height: 40px;" >开  始(<u>S</u>)</button>
        <button onclick="ok()" accesskey="o"   style="width: 100px; height: 40px; display:none" id="o">停止(<u>O</u>)</button>
    </div>
</body>
