    <script src="../Scripts/jquery.form.js"></script>
    <script type="text/javascript">

        $(function () {
            ajaxGetcardinfojson();
        })
        //ajax获取卡的数据
        function ajaxGetcardinfojson() {
            $.ajax({
                url: "../Iot/GetbdzhDATAJson",
                type: "POST",
                data: { Id: '@ViewData["Id"]' },
                dataType: "json",
                async: true,
                beforeSend: function () {
                    ddchen();
                },
                success: function (response) {
                    disLoading();
                    var json = eval(response);
                    htmljp(json);
                },
                error: function (e) {
                    disLoading();
                    layer.alert("操作失败！", { icon: 2 });
                }
            })
        }

        //html拼接
        //拼接html
        function htmljp(val) {
            var jsonstr = val.result;
            var html = "";
            //html += '<div class="cdv"><a href="../Iot/bindingView"><span>我要绑定</span></a></div>';
            if (jsonstr != null && jsonstr != "") {
                for (var i = 0, j = jsonstr.length; i < j; i++) {
                    html += '<div class="cdv dzi">';
                    html += '<p>监控点SID：' + jsonstr[i] +'</p>';
                    html += '</div>';
                }
            }
            else {
                html += '<div class="cdv dzi">';
                html += '<p>尚未绑定远程帐号</p>';
                html += '</div>';
            }
            $("#contsr").html(html);
        }

        var loadi;
        function ddchen() {
            loadi = layer.load(1, { shade: [0.8, '#393D49'] })
        }
        //关闭等待效果
        function disLoading() {
            layer.close(loadi);
        }

        //跳转解除绑定
        function jcbdurl(val) {
            window.location.href = "../Iot/JCbingdingView?username=" + val;
        }
        //跳转监控点管理
        function jkdurl(val) {
            window.location.href = "../Iot/JKDlistView?zhId=" + val;
        }


    </script>
</head>
<body class="huibg">
    <nav class="navbar text-center">
        <button class="topleft" onclick="javascript:history.go(-1);"><span class="iconfont icon-fanhui"></span></button>
