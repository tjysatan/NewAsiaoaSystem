<script type="text/javascript">
    function addTab(title, url) {
        var closable=true;
        if (title == "主页")
            closable = false;
        if ($('#easyui-tabs').tabs('exists', title)) {
            var content = '<iframe scrolling="auto" frameborder="0"  src="' + url + '" style="width:100%;height: 682px;"></iframe>';
            $("#easyui-tabs").tabs('select', title);//选中指定标签
            var tab = $("#easyui-tabs").tabs('getSelected');//获取被选中的选项卡对象
            $('#easyui-tabs').tabs('update', {
                tab: tab,
                options: {
                    title: title,
                    content: content,
                    closable: closable,
                    fit: true,
                    selected: true
                }
            });

        }
        else {
            var content = '<iframe scrolling="auto" frameborder="0"  src="' + url + '" style="width:100%;height: 682px;"></iframe>';
            $('#easyui-tabs').tabs('add', {
                title: title,
                content: content,
                closable: closable
            });
        }
    }

    $(function () {
        addTab("主页", "/Admin/h_right");
    })

    function CloseTab(title)
    {
        $("#easyui-tabs").tabs('close', title);
    }
</script>
