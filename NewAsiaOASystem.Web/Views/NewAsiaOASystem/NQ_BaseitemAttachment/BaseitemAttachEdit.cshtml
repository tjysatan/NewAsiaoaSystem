@model NewAsiaOASystem.ViewModel.NQ_BaseitemAttachmentView
@{
    ViewBag.Title = "NQ_BaseitemAttachmentView";
    Layout = "~/Views/Shared/_SysLayout.cshtml";
}

<style>
    .sopbtnsave {
        position: absolute;
        width: 90%;
        bottom: 5px;
        text-align: center;
    }

    .soptopbtn {
        position: absolute;
        width: 90%;
        top: 1px;
        text-align: center;
    }
</style>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;"></fieldset>

<div class="layui-tab" lay-filter="test">
    <ul class="layui-tab-title">
        <li class="layui-this" lay-id="11">上传</li>

    </ul>
    <div class="layui-tab-content" style="height: 100px;">
        <div class="layui-tab-item layui-show">
            @using (Html.BeginForm("BaseitemAttachSave", "NQ_BaseitemAttachment", FormMethod.Post, new { id = "form1", enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(m => m.id);
                @Html.Hidden("fitemid", ViewData["ItemID"]);
                @Html.HiddenFor(m => m.FAttType);
                @Html.Hidden("fstatus", ViewData["ItemStatus"]);
                @Html.Hidden("fsupplierid", ViewData["SupplierId"]);
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">供应商名称：</label>
                        <div class="layui-input-inline">
                            <input type="text" name="fitemname" id="fitemname" lay-verify="required" value="@ViewBag.SupplierName" autocomplete="off" class="layui-input" readonly="readonly">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">供应商编码：</label>
                        <div class="layui-input-inline">
                            <input type="text" name="fitemname" id="fitemname" lay-verify="required" value="@ViewBag.SupplierNumber" autocomplete="off" class="layui-input" readonly="readonly">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">元器名称：</label>
                        <div class="layui-input-inline">
                            <input type="text" name="fitemname" id="fitemname" lay-verify="required" value="@ViewBag.ItemName" autocomplete="off" class="layui-input" readonly="readonly">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">元器编码：</label>
                        <div class="layui-input-inline">
                            <input type="text" name="fitemnumber" id="fitemnumber" value="@ViewBag.ItemNumber" lay-verify="required" autocomplete="off" class="layui-input" readonly="readonly">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">元器型号：</label>
                        <div class="layui-input-inline">
                            <input type="text" name="fitemmodel" id="fitemmodel" value="@ViewBag.ItemModel" lay-verify="required" autocomplete="off" class="layui-input" readonly="readonly">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">有效期限：</label>
                        <div class="layui-input-inline">
                            <input type="text" name="fattdeadline" id="fattdeadline" lay-verify="required\date" value="@Model.FAttDeadline.ToString("yyyy-MM-dd")" onclick="WdatePicker()" autocomplete="off" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-inline">
                        <label class="layui-form-label">图片：</label>
                        <div class="layui-input-inline">
                            <input type="file" name="image" id="image" class="layui-input">

                        </div>
                    </div>

                    <div class="layui-inline">
                        <label class="layui-form-label"></label>
                        <div class="layui-input-inline">
                            @if (string.IsNullOrEmpty(Model.FAttURL))
                            {
                            }
                            else
                            {
                                <a href="#" onclick="upload('@Model.FAttURL')">
                                    <img width="50" height="50" src="@Url.Content(Model.FAttURL)" alt="images" />
                                </a>
                            }
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">备注：</label>
                        <div class="layui-input-inline">
                            <input type="text" name="fatttext" id="fatttext" value="@Model.FAttText" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                </div>
                <!--按钮-->
                <div class="inquiry-input infor-b">
                    <button class="layui-btn layui-btn-primary" onclick="return SaveForm()">提交</button>
                </div>
            }
        </div>

    </div>
</div>

<script src="~/Scripts/NAjs/NQ_BaseitemAttachment.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

        var atttype = $('#FAttType');

        switch (atttype) {
            case 0:
                $('#fatttypename').val("CCC证书");
                break;
            case 1:
                $('#fatttypename').val("CQC证书");
                break;
            case 2:
                $('#fatttypename').val("规格书");
                break;
            case 3:
                $('#fatttypename').val("技术确认标准");
                break;
            case 4:
                $('#fatttypename').val("样品确认单");
                break;
            case 5:
                $('#fatttypename').val("质量协议");
                break;
            case 6:
                $('#fatttypename').val("供方季度/年度考核");
                break;

        }

    });

</script>
