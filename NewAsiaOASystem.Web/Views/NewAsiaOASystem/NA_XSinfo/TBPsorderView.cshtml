        var Z_JHDD = $("#Z_JHDD").val();//交货地点
        var Z_YSFS = $("#Z_YSFS").val();//运输方式
        var yfprice = $("#yfprice").val();//运费
        var dsprice = $("#dsprice").val();//调式费
        if (Z_JHQX == "") {
            layer.alert("请填写交货日期", { icon: 2 });
