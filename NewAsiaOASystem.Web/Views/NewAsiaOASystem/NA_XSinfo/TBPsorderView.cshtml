                }
            }
        })
    }

    //查询销售订单其他信息
    function Getxsorderqtinfo() {
        var json;
         $.ajax({
            url: "../NA_XSinfo/Getxsorderqtinfo",
            type: "POST",
            data: { dsorderId: '@Model.Sort'},
            dataType: "json",
            async: true,
            beforeSend: function () {
                ddchen();
            },
             success: function (response) {
                 json = eval(response);
                 if (json == null) {
                     var zje = parseFloat('@Model.Xs_je');
                     var str = "";
                     if ('@Model.PaymentTypeName' == "微信支付" || '@Model.PaymentTypeName' == "支付宝") {
                         var xxf = zje * 0.006;
                         str = "订单总金额：" + zje + "&nbsp;&nbsp;支付方式：" + '@Model.PaymentTypeName' + ",&nbsp;&nbsp;需要扣除" + xxf.toFixed(2) + "手续费";
                     }
                     else {
                         str = "订单总金额：" + zje + "&nbsp;&nbsp;支付方式：" + '@Model.PaymentTypeName';
                     }
                     $("#htmlzffs").html(str);
                 } else {
                     $("#Z_JHDD").val(json.Dsjhdd);
                     $("#Z_YSFS").val(json.Dsyfcd);
                     $("#yfprice").val(json.Dsyf);
                     var zje = parseFloat('@Model.Xs_je') + parseFloat(json.Dsyf);
                     var str = "";
                     if ('@Model.PaymentTypeName' == "微信支付" || '@Model.PaymentTypeName' == "支付宝") {
                         var xxf = zje * 0.006;
                         str = "订单总金额：" + zje + "&nbsp;&nbsp;支付方式：" + '@Model.PaymentTypeName' + ",&nbsp;&nbsp;需要扣除" + xxf.toFixed(2) + "手续费";
                     }
                     else {
                         str = "订单总金额：" + zje + "&nbsp;&nbsp;支付方式：" + '@Model.PaymentTypeName';
                     }
                     $("#htmlzffs").html(str);
                 }
                 disLoading();
            }
         })
        return json;
    }

