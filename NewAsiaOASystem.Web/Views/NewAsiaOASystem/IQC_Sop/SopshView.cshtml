@{
    ViewBag.Title = "审核提交页面";
    Layout = "~/Views/Shared/_SysLayout.cshtml";
}
<style>
    .sopbtnsave
    {
        position: absolute;
        width: 90%;
        bottom: 5px;
        text-align: center;
    }

    .soptopbtn
    {
        position: absolute;
        width: 90%;
        top: 1px;
        text-align: center;
    }
</style>
<div class="layui-tab-item layui-show">
    <input type="hidden" id="sopId" name="sopId" value='@ViewData["Id"]' />
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
        <legend>@ViewData["jyname"] (@ViewData["yjxh"]) 来料检验作业标准审核</legend>
    </fieldset>
    
    <div class="layui-form-item">
        <label class="layui-form-label">审核人：</label>
        <div class="layui-input-inline">
            <input type="text" name="username" lay-verify="required" readonly="readonly" autocomplete="off" class="layui-input" value='@ViewData["username"]'>
        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label">是否通过：</label>
        <div class="layui-input-inline">
            <select id="istg" name="istg" style="border: 1px solid #e5e5e5; width: 190px; height: 38px;">
                <option value="1">通过</option>
                <option value="2">不通过</option>
            </select>
        </div>
    </div>

    <!--按钮-->
    <div class="sopbtnsave">
        <button class="layui-btn layui-btn-primary" onclick="return shsopEide()">提交</button>
    </div>
</div>
<script src="~/Scripts/NAjs/IQCpulice.js"></script>