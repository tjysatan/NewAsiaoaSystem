@model NewAsiaOASystem.ViewModel.NAReturnListView
@{
    ViewBag.Title = "新的客服编辑页面";
    Layout = "~/Views/Shared/_SysLayout.cshtml";
}

<style>
    .table_con
    {
        border-collapse: collapse;
        border: none;
    }

        .table_con td
        {
            border: solid #eae5e5 1px;
            height: 35px;
            padding: 0 0 0 5px;
        }

    .btnspan button
    {
        width: 120px;
        height: 30px;
        background: #337CA8;
    }

    .daradcss
    {
        width: 200px;
        height: 50px;
        border: 1px solid #eae5e5;
    }

    .txtboxcss
    {
        width: 200px;
        height: 30px;
        border: 1px solid #eae5e5;
