        //根据元器件ID 查找元器件信息
        function ajaxyjmodelbyidjson(Id) {
            var json;
            $.ajax({
                type: "POST",
                url: "/NQ_YJinfo/ ",
                data: { Id: Id },
                async: false,
                success: function (reslut) {
                    json = eval('(' + reslut + ')');
                },
                error: function (e) {
                    alert("请求失败！");
                }
            })
            return json;
        }

        //整理数据
        function GetArrangementdata() {
            var json;
            $.ajax({
                type: "POST",
                url: "/NAReturnList/Arrangementdata ",
                async: true,
                dataType: "json",
                beforeSend: function () {
                    ddchen();
                },
                success: function (reslut) {
                    disLoading();
                    if (reslut.reslut == "success")
                        layer.alert(reslut.explain, { icon: 1 })
                    else
                        layer.alert(reslut.explain, { icon: 2 })
                },
                error: function (e) {
                    alert("请求失败！");
                }
            })
            return json;
        }

        var loadi;
        function ddchen() {
            loadi = layer.load(1, { shade: [0.8, '#393D49'] })
        }

        //关闭等待效果
        function disLoading() {
            layer.close(loadi);
        }

        //根据供应商代码查找供应商信息
        function ajaxgysinfobydm(dm) {
            var json;
            $.ajax({
                type: "POST",
                url: "/NQ_GysInfo/Getgysinfobydm",
                data: { dm: dm },
                async: false,
                success: function (reslut) {
                    json = eval('(' + reslut + ')');
                },
                error: function (e) {
                    alert("请求失败！");
                }
            })
            return json;
        }

        //pageIndex当前页
        function SerchList(pageIndex)
        {
            $("input[name='pageIndex']").val(pageIndex);
            var options = {
                beforeSubmit: function () {
                    return true;
                },
                dataType: "json",
                success: function (context) {
                    var data=eval(context.result);
                    dataGrid(data);
                    $(".pagin").html(context.PageN);//输出分页按钮
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    $.messager.alert("操作提示", '查询失败请重试！', 'error');
                }
            }
            $('#form1').ajaxSubmit(options);
            return false;
        }

        //车间批量处理编辑
        function NewPLwxbj(val, val2) {
            var Id = val;
            if (Id != "") {
                $('#windowDia').html("<iframe src=../NAReturnList/NewPLweixiuView?Id=" + Id + "&&R_Id=" + val2 + "  style='border:0px;' width='100%' height='400px'></iframe>");
                $("#windowDia").window({
                    title: '维修批量编辑',
                    modal: true,
                    closed: false,
                    width: '90%',
                    height: 400,
                    top: 0,
                });
            }
        }

        //批量维修处理
        function PLwxbj() {
            var arr = GetGridSelete();
            if (arr.length <= 0) {
                $.messager.alert("操作提示", "请先最少选择一条记录后再做维修编辑！", "warning");
            }
            else {
                NewPLwxbj(arr, '@ViewData["RId"]');
            }
        }

        //批量维修
        function NewPLwx()
        {
            var arr = GetGridSelete();
            
            if(arr.length <= 0)
            {
                $.messager.alert("操作提示", "请先最少选择一条记录后再做维修编辑！", "warning");
            }
            else
            {
                var val=arr;
                layer.open({
                    type: 2,
                    title: ['批量处理', 'font-size:14px;'],
                    area: ['750px', '550px'],
                    offset: '10px',
                    fixed: false, //不固定
                    maxmin: true,
                    content: '../NAReturnList/NewPLweixiuView?Id='+val+'&&R_Id='+'@ViewData["RId"]',
                    end: function () {
                        location.reload();
                    }
                });
            }
        }

        //客退品增加
        function fkzj()
        {
            var id = '@ViewData["RId"]';
            layer.open({
                type: 2,
                title: ['客退品明细增加', 'font-size:14px;'],
                area: ['95vw', '95vh'],
                offset: '10px',
                fixed: false, //不固定
                maxmin: true,
                content: '../NQ_CHdetailinfo/list?id='+id+'&&&&type=2',
                end: function () {
                    location.reload();
                }
            });
        }

        //批量删除
        function  fthmxpldel()
        {
            var arr = GetGridSelete();
            if (arr.length <= 0) {
                $.messager.alert("操作提示", "请先最少选择一条记录后再做批量删除！", "warning");
            }
            else {
                val = "'" + arr + "'";
                $.ajax({
                    type: "POST",
                    url: "/NAReturnList/PLDELFxEdit",
                    ContentType: "application/json;charset=utf-8;",
                    data: { FxmxId:val, R_Id: '@ViewData["RId"]' },
                    success: function (context) {
                        if ("success" == context.result) {
                            location.reload();
                        }
                        if ("error" == context.result) {
                            $.messager.alert("操作提示", '删除失败！', 'info', function () {
                                location.reload();
                            })
                        }
                    }
                })
            }
        }

        //单个处理
        function neweditfx(id)
        {
            layer.open({
                type: 2,
                title: ['维修处理', 'font-size:14px;'],
                area: ['750px', '95vh'],
                offset: '10px',
                fixed: false, //不固定
                maxmin: true,
                content: '../NAReturnList/FxEditPage?Id='+id+'&&R_Id='+'@ViewData["RId"]',
                end: function () {
                    location.reload();
                }
            });
        }

        //列表按钮显示
        //val 维修记录Id
        //val2 返退货Id
        function Nftmxlietbtnshow(val)
        {
            var id = "'" + val + "'";
            var s = '<a class="layui-btn layui-btn-primary layui-btn-small" onclick="neweditfx('+id+')">编辑</a>';
            return s;
        }
    </script>
}


