@{
    ViewBag.Title = "统计责任部门的均摊费用";
    Layout = "~/Views/Shared/_SysLayout.cshtml";
}

<script src="~/Scripts/layer/layer.js"></script>
<script src="~/Scripts/highcharts.js"></script>
<script src="~/Scripts/exporting.js"></script>
<style>
    .btn1 {
        padding: 0 10px 0 10px
    }
</style>
<script type="text/javascript">
    $(function () {
        TJFTSUM();
        //pingtuhtml();
    });
    var loadi;
    function ddchen() {
        loadi = layer.load(1, { shade: [0.8, '#393D49'] })
    }

    //关闭等待效果
    function disLoading() {
        layer.close(loadi);
    }

    //获取责任部门均摊的售后费用数据统计
    function TJFTSUM(val) {
        if (val == "reset") {
            $("#txtSearch_starttime").val("");
            $("#txtSearch_enedtime").val("");
        }

        var starttime = $("#txtSearch_starttime").val();
        var enedtime = $("#txtSearch_enedtime").val();
        var json;
        $.ajax({
            type: "POST",
            url: "/NAReturnList/GetStatisticsgroupResdepartmentcost",
            dataType: "json",
            data: { starttime: starttime, endtime: enedtime },
            async: true,
            beforeSend: function () {
                ddchen();
            },
            success: function (reslut) {
                disLoading();
                json = eval(reslut);
                $("#jsondata").val(json);
                HtmlPJ(json);
                pingtuhtml(json);
            },
            error: function (e) {
                disLoading();
                layer.alert("网络异常，请重试！", { icon: 2 })
            }
        })

        //html拼接
        function HtmlPJ(str) {
            var jsonStr;
            jsonStr = str;
            var html = "";
            $("#content").html("");
            html = '<table class="layui-table">';
            html += '<thead>';
            html += '<tr>';
            html += '<th>责任部门</th>';
            //html += '<th>物料代码</th>';
            //html += '<th>退货数量</th>';
            html += '<th>售后费用</th>';
            html += '</tr>';
            html += '</thead>';
            html += '<tbody>';
            if (jsonStr != null) {
                for (var i = 0, j = jsonStr.length; i < j; i++) {
                    html += '<tr>';
                    html += '<td >' + jsonStr[i][0] + '</td>';
                    html += '<td >￥' + jsonStr[i][1] + '</td>';
                   
                }

                html += '</tr>';
            }


            else {
                html += '<tr>';
                html += '<td colspan="3">~当前没有数据！</td>';
                html += '</tr>';
            }

            html += '</tbody>';
            html += '</table>';
            $("#content").html(html);
        }
    }

    //导出数据询问层
    function exportexcel() {
        var text = "";
        var starttime = $("#txtSearch_starttime").val();
        var enedtime = $("#txtSearch_enedtime").val();
        if (starttime != "" && enedtime != "") {
            text = "是否确定导出" + starttime + "到" + enedtime + "时间段内责任部门售后费用统计！"
        } else {
            text = "是否确定导出当月责任部门售后费用统计！"
        }
        var type;
        layer.open({
            type: 1,
            offset: type //具体配置参考：http://www.layui.com/doc/modules/layer.html#offset
            , id: 'layerDemo' + type //防止重复弹出
            , content: '<div style="padding: 20px 100px;">' + text + '</div>'
            , btn: ['数据导出', '关闭']
            , btnAlign: 'c' //按钮居中
            , shade: 0 //不显示遮罩
            , yes: function () {
                console.log('111111')
                window.location.href = "/NAReturnList/ExcelExportStatisticsgroupResdepartmentcost?starttime=" + starttime + "&endtime=" + enedtime;
                layer.closeAll();
            }
        });
    }

    //图标展示
    function handleChartshow() {
        //var json = $("#jsondata").val();
        //layer.open({
        //    type: 2,
        //    title: ['责任部门售后费用图标', 'font-size:14px;'],
        //    area: ['95vw', '95vh'],
        //    offset: '10px',
        //    fixed: false, //不固定
        //    maxmin: true,
        //    content: '../NAReturnList/StatisticsgroupResdepartmentcostChartView?json=' + json ,
        //    end: function () {
        //        location.reload();
        //    }
        //});
    }

    //饼图数据
    function pingtuhtml(strjson) {
        console.log("strjson", strjson)
        var arr = new Array();
        for (var i = 0, j = strjson.length; i < j; i++) {
            var tmp = new Array();
            tmp[0] = strjson[i][0];
            tmp[1] = strjson[i][1];
            arr[i] = tmp;
        }
        console.log("strjson", arr)
        $('#container').highcharts({
            chart: {
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false
            },
            title: {
                text: '责任部门售后费用占比'
            },
            tooltip: {
                headerFormat: '{series.name}<br>',
                pointFormat: '{point.name}: <b>{point.percentage:.1f}%</b>'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        format: '<b>{point.name}</b>: {point.percentage:.1f}%',
                        style: {
                            color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                        }
                    }
                }
            },
            series: [{
                type: 'pie',
                name: '返退货数量占比',
                data: arr,
            }]
        });
    }


</script>

@Html.Hidden("jsondata");
<div style="padding:5px">
    <blockquote class="layui-elem-quote">
        <div class="layui-inline">
            <span>
                维修时间：
            </span>

            <span class="inquiry-input">
                <input type="text" name="txtSearch_starttime" id="txtSearch_starttime" onclick="WdatePicker()" />
            </span>
            -
            <span class="inquiry-input">
                <input type="text" name="txtSearch_enedtime" id="txtSearch_enedtime" onclick="WdatePicker()" />
            </span>
        </div>
        <button type="submit" class="layui-btn" style="padding:0 10px 0 10px" onclick="TJFTSUM('submit')">
            <i class="layui-icon"> &#xe615;</i>
            查询
        </button>

        <button type="reset" class="layui-btn layui-btn-primary" style="padding:0 10px 0 10px" onclick="TJFTSUM('reset')">
            <i class="layui-icon"> &#xe669;</i>
            刷新
        </button>
        <button type="submit" class="layui-btn layui-btn-primary btn1" onclick="exportexcel()"> <i class="layui-icon"> &#xe67d;</i> 导出excel</button>
       
        <span style="color:#FF5722">注：</span>
        <span style="font-size:12px">默认当月维修的数据</span>
    </blockquote>

</div>


<div id="content" style="padding:5px">

</div>

