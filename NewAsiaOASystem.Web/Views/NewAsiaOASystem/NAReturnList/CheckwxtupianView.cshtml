@{
    ViewBag.Title = "维修图片查看";
    Layout = "~/Views/Shared/_SysLayout.cshtml";
}

<script type="text/javascript">
    function opnimg(val) {
        layer.open({
            type: 2,
            title: false,
            area: ['630px', '460px'],
            shade: 0.8,
            closeBtn: 0,
            shadeClose: true,
            content: 'http://wx.chinanewasia.com/' + val,
        });
        layer.msg('点击任意处关闭');
    }
</script>

