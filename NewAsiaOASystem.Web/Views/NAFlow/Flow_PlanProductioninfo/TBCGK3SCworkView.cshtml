<script type="text/javascript">
    layui.use('form', function () {
        var form = layui.form; //只有执行了这一步，部分表单元素才会自动修饰成功
        //let str = "<option value=''>请选择</option>";
        //str += "<option value='05.013.0001'>订做电控箱</option>";
