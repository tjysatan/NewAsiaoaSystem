    //查询入库产品数据
    function AjaxGetRKCPInfoyId() {
        var json;
        $.ajax({
            url: "../DKX_DDtypeinfo/RLCPjson",
            type: "POST",
            data: { Id: '@ViewData["Id"]' },
            dataType: "JSON",
            async: false,
            success: function (response) {
                json = eval(response);
            },
            error: function (e) {
                layer.alert("操作失败！", { icon: 2 });
            }
        })
        return json;
    }

    //获取需求数据
    function AJaxxuqiujson(val) {
        var json;
        $.ajax({
            url: "../DKX_DDtypeinfo/AjaxxuqiubyorderNo",
            type: "POST",
            data: { Bjno: val },
            dataType: "JSON",
            async: false,
            success: function (response) {
                json = eval(response);
            },
            error: function (e) {
                layer.alert("操作失败！", { icon: 2 });
            }
        })
        return json;
    }

    //获取资料数据
    function AJaxziliaojson(Id, type) {
        var json;
        $.ajax({
            url: "../DKX_DDtypeinfo/GetRKziliaojsonbycpIdandtype",
            type: "POST",
            data: { cpId: Id, type: type },
            dataType: "JSON",
            async: false,
            success: function (response) {
                json = eval(response);
            },
            error: function (e) {
                layer.alert("操作失败！", { icon: 2 });
            }
        })
        return json;
    }

    //入库资料审核
    function RKziliaoshEide(type) {
        var Id = '@ViewData["Id"]';
        $.ajax({
            url: "../DKX_DDtypeinfo/FAKZLSHEide",
            type: "POST",
            data: { Id: Id, type: type },
            dataType: "html",
            async: true,
            beforeSend: function () {
                ddchen();
            },
            success: function (response) {
                disLoading();
                if (response == "0") {
                    layer.alert("操作异常！", { icon: 2 }, function () { location.reload(); });
                }
                if (response == "1") {
                    layer.alert("订单不存在！", { icon: 2 }, function () { location.reload(); });
                }
                if (response == "2") {
                    layer.alert("订单当前状态,不支持资料审核！", { icon: 2 }, function () { location.reload(); });
                }
                if (response == "4") {
                    layer.alert("操作成功！", { icon: 1 }, function () { guanbi() });
                }
                if (response == "5") {
                    layer.alert("操作失败！", { icon: 2 }, function () { location.reload(); });
                }
            },
            error: function (e) {
                disLoading();
                layer.alert("操作失败！", { icon: 2 });
            }
        })
    }

    var loadi;
    function ddchen() {
        loadi = layer.load(1, { shade: [0.8, '#393D49'] })
    }
    //关闭等待效果
    function disLoading() {
        layer.close(loadi);
    }

    function guanbi() {
        var index = parent.layer.getFrameIndex(window.name);
        //关闭弹出层
        parent.layer.close(index);
    }
</script>


