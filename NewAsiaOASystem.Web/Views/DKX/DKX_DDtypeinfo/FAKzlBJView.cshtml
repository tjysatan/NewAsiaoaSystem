    //查询入库产品数据
    function AjaxGetRKCPInfoyId() {
        var json;
        $.ajax({
            url: "../DKX_DDtypeinfo/RLCPjson",
            type: "POST",
            data: { Id: '@ViewData["Id"]' },
            dataType: "JSON",
            async: false,
            success: function (response) {
                json = eval(response);
            },
            error: function (e) {
                layer.alert("操作失败！", { icon: 2 });
            }
        })
        return json;
    }

    //获取资料数据
    function AJaxziliaojson(Id) {
