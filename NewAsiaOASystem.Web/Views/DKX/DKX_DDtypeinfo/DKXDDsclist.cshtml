                        { field: 'REMARK2', width: 80, title: '备注2' },
                        {
                            field: 'Ps_orderDocEntry', width: 80, title: '普实单号', templet: function (d) {
                                if (d.Ps_orderDocEntry != '' && d.Ps_orderDocEntry != null) {
                                    return d.Ps_orderDocEntry + "/" + d.Ps_orderDocEntryNUM
                                } else {
                                    return "暂未设置"
                                }
                            }
