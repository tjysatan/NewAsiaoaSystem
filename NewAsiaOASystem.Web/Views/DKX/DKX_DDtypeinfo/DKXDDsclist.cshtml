            $("#txt_endctiome").val('@ViewData["endctiome"]');
            $("#txt_DHtype").val('@ViewData["DHtype"]');
            //BindGrid();
            Gettabledata();
        })

        //回车触发查询
        $(document).keyup(function (event) {
            if (event.keyCode == 13) {
                Gettabledata();
            }
