    //通过查询公司名称
    function Getcusinfobykcode() {
        $.ajax({
            url: "../DKX_DD/Getcusinfobycode",
            type: "POST",
            data: { code: '@Model.khkecode' },
            dataType: "Json",
            async: false,
            success: function (response) {
                if (response != null) {
                    $("#gfname").html(response.Name)
                } else {
                    $("#gfname").html(@Model.KHname)
                }
            },
            error: function (e) {
                disLoading();
                layer.alert("操作失败！", { icon: 2 });
            }
        })
    }

    //基本信息
       //查询合同基础信息
    function gethtjcinfo() {

        var json
         $.ajax({
            url: "../NA_XSinfo/Getxsorderqtinfo",
            type: "POST",
            data: { dsorderId: '@Model.Id'},
             dataType: "json",
             async: false,

             success: function (response) {
                   json = eval(response);
                  if (json == null) {
                     $("#Dsjhqx").html("合同确认后7个工作日发货");
                     $("#Dsyfcd").html("供方承担");
                     $("#Dsjhdd").html("通过快递公司到达贵司");
                     $("#DsJSFS").html("月结30天");

                 } else {
                     $("#Dsjhqx").html(json.Dsjhqx);
                     $("#Dsyfcd").html(json.Dsyfcd);
                     $("#Dsjhdd").html(json.Dsjhdd);
                     $("#DsJSFS").html(json.DsJSFS);
                 }

                 //disLoading();
            }
         })
        return json;
    }
    //公账隐藏显示
    function ycxsgz(val) {
        if (val == "false") {//掩藏
