
@{
    ViewBag.Title = "部门信息";
    Layout = "~/Views/Shared/_SysLayout.cshtml";
}
@section HeadContent{
    <script>
  
        $(function () {
            BindGrid();
        })
        /*
     绑定dataGrid数据
    */
        function BindGrid() {
            @{
                if (null != ViewBag.result)
                 {
                    @: var jsonStr =@Html.Raw(ViewBag.result)
                    @: $("#dg").treegrid('loadData', jsonStr);
                 }
              } 
        }
    </script>
}

<div class="list_style">
    <div class="z-toolbar">
        <a href="#" plain="true" class="easyui-linkbutton" icon="icon-reload" title="刷新" onclick="location.href='/SysDepartment/List'">刷新</a>
        <a href="#" plain="true" class="easyui-linkbutton" icon="icon-add" title="新增" onclick="addClick('/SysDepartment/Add','添加','/SysDepartment/List')">新增</a>
        <a href="#" plain="true" class="easyui-linkbutton" icon="icon-edit" title="编辑" onclick="update('/SysDepartment/Update','修改','/SysDepartment/List')">编辑</a>
        <a href="#" plain="true" class="easyui-linkbutton" icon="icon-no" title="删除" onclick="del('/SysDepartment/Delete')">删除</a>
       
    </div>

<div style="margin: 10px 0;"></div>

<table class="easyui-treegrid" id="dg"  data-options="idField:'Id',treeField:'Name',singleSelect:false">
    <thead>
        <tr>
            <th data-options="field:'Id',checkbox:true,align:'center'"></th>
            <th data-options="field:'Name',width:'30%',align:'center'">部门名称</th>    
             <th data-options="field:'Description',width:'30%',align:'center'">描述</th>
            <th data-options="field:'State',width:'15%',align:'center',formatter:showVal">状态</th>
            <th data-options="field:'CreateTime',width:'24%',align:'center',formatter:showDate">创建时间</th>
        </tr>
    </thead>

</table>
</div>
 


<div id="windowDia" class="easyui-window" data-options="modal:true,closed:true,iconCls:'icon-save'" style="width: 500px; height: 400px; padding: 10px;">
</div>



