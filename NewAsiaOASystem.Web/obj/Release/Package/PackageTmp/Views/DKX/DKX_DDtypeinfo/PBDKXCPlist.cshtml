
@{
    ViewBag.Title = "品保方案库列表";
    Layout = "~/Views/Shared/_SysLayout.cshtml";
}


@section HeadContent{
    <script type="text/javascript">
        $(function () {
            //BindGrid();
            Gettabledata();
        })

        //初始化table数据
        function Gettabledata() {
            var txtwlno = $("#txtwlno").val();//物料号
            var txtcpname = $("#txtcpname").val();//产品型号
            var txtgl = $("#txtgl").val();//功率
            var txtdw = $("#txtdw").val();//功率单位
            var txtType = $("#txtType").val();//产品类型
            var txtft = $("#txtft").val();//是否分体
            var txtcpgnjs = $("#txtcpgnjs").val();//功能简述
            var txtGcs_name = $("#txtGcs_name").val();//工程师
            var txtIsDis = $("#txtIsDis").val();
            layui.use(['table', 'element'], function () {
                var table = layui.table;
                var element = layui.element;
                table.render({
                    elem: '#test',
                    url: '/DKX_DDtypeinfo/New_GetDKXCPInfolistpage',
                    page: {
                        curr: history.state != null && history.state.page != null ? history.state.page : 1
                    },//页面缓存值为null时页码为1 否则取缓存值
                    where: {
                        wlno: txtwlno,
                        cpname: txtcpname,
                        gl: txtgl,
                        dw: txtdw,
                        Type: txtType,
                        ft: txtft,
                        Gcs_name: txtGcs_name,
                        gnjs: txtcpgnjs,
                        IsDis: txtIsDis,
                    },//设定异步数据接口的额外参数
                    cellMinWidth: 80, //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                    cols: [[
                        { field: 'Id', width: 80, title: 'ID', sort: true, },
                        { field: 'Ps_wlBomNO', width: 130, title: '物料号', fixed: 'left' },
                        { field: 'Cpname', width: 130, title: '型号名称' },

                        {
                            field: 'POWER', width: 90, title: '功率', templet: function (d) {
                                return d.Power + "/" + d.DW;
                            }
                        },
                        {
                            field: 'Type', width: 100, title: '类型', templet: function (d) {

                                return showddtype(d.Type, d.Isft);
                            }
                        },
                        {
                            field: 'IsDis', width: 100, title: '状态', templet: function (d) {

                                return showcpzt(d.IsDis, d.zgyy);
                            }
                        },
                        { field: 'cpgnjs', width: 230, title: '功能简述' },
                        {
                            field: 'Gcs_nameId', width: 80, title: '工程师', templet(d) {
                                return AjaxGcsinfo(d.Gcs_name).Name;
                            }
                        },
                        {
                            field: 'Ysdatetime', width: 130, title: '入库时间', templet(d) {
                                //return layui_dateToStr(d.Ysdatetime)
                                if (d.RK_time != "" && d.RK_time != null) {
                                    return layui_dateToStr(d.RK_time);
                                }
                                else {
                                    return "";
                                }
                            }
                        },

                        { field: '', title: '操作', width: 160, fixed: 'right', toolbar: "#bar" }
                    ]],
                    done: function (res, curr, count) {
                        $(".layui-table-box").find("[data-field='Id']").css("display", "none");
                        $("[data-field='DD_Type']").children().each(function () {
                            var dd_typename = showddtype($(this).text());
                            $(this).text(dd_typename)
                        });
                        element.render();
                    }
                    ,
                    //page: true,
                    limits: [3, 5, 10, 15, 20]  //一页选择显示3,5或10条数据
                    , limit: 10  //一页显示10条数据

                });
                table.on('tool(test)', function (obj) {
                    var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
                    var data = obj.data; //获得当前行 tr 的 DOM 对象（如果有的话）
                    if (layEvent === 'Ediezg') { //查看
                        ZGDZURL(data.Id);
                    }
                    if (layEvent === 'showzl') {//资料查看
                        ziliaochakan(data.Id)
                    }
                    if (layEvent === 'del') {//删除
                        cpdel(data.Id)
                    }
                    if (layEvent === 'showyy') { //查看
                        Show_references_Number(data.Ps_wlBomNO);
                    }
                })
            })
        }

        function BindGrid() {
            @{
                if (null != Model && null != Model.GetPagingDataJson)
                {
                    string json = Model.GetPagingDataJson;//获取json数据
                    @: var jsonStr = @Html.Raw(json);
                }
             }
            dataGrid(jsonStr);
        }

        function dataGrid(jsonStr){
            if (typeof (jsonStr) != "undefined") {
                var html = "";
                html = '<table class="layui-table">';
                html += '<thead>';
                html+='<tr style="font-weight:bold;color:#000000">';
                html += '<td width="2%"> <input type="checkbox" name="TopChecked" value="0" onclick="TopChecked()" /></td></td>';
                html+='<td width="15%">型号名称</td>';
                html+='<td width="5%">功率</td>';
                html+='<td width="8%">类型</td>';
                html+='<td width="8%">工程</td>';
                html+='<td width="10%">入库时间</td>';
                html+='<td width="10%">状态</td>';
                html+='<td width="15%">功能简述</td>';
                html+='<td width="15%">操作</td>';
                html+='</tr>';
                html+='</thead>';
                for (var i = 0, j = jsonStr.length; i < j; i++)
                {
                    //工程师信息
                    var gcsstr=AjaxGcsinfo(jsonStr[i].Gcs_name)
                    var gcsnamestr="";
                    if(gcsstr!=null&&gcsstr!="")
                    {
                        gcsnamestr=gcsstr.Name;
                    }
                    html+='<tr style="color:#000000">';
                    html += '<td width="2%"><input type="checkbox" name="ContentChecked" value="' + jsonStr[i].Id + '"/></td>';
                    html+='<td width="15%">'+jsonStr[i].Cpname+'</td>';
                    html+='<td width="5%">'+jsonStr[i].Power+'/'+jsonStr[i].DW+'</td>';
                    html+='<td width="8%">'+showddtype(jsonStr[i].Type,jsonStr[i].Isft)+'</td>';
                    html+='<td width="8%">'+gcsnamestr+'</td>';
                    html+='<td width="10%">'+jsonStr[i].RK_time+'</td>';
                    html+='<td width="10%">'+showcpzt(jsonStr[i].IsDis,jsonStr[i].zgyy)+'</td>';
                    if(jsonStr[i].cpgnjs!=null&&jsonStr[i].cpgnjs)
                        html+='<td width="10%">'+jsonStr[i].cpgnjs+'</td>';
                    else
                        html+='<td width="10%">-</td>';
                    html+='<td width="15%"><div class="layui-btn-group">'+czbtnshow(jsonStr[i].Id)+'</div></td>';
                    html+='</tr>';
                }
                html += '</table>';
                $("#content").html(html);
            }
        }

        function SerchList(pageIndex)
        {
            $("input[name='pageIndex']").val(pageIndex);
            var options = {
                beforeSubmit: function () {
                    return true;
                },
                dataType: "json",
                success: function (context) {
                    var data=eval(context.result);
                    dataGrid(data);
                    $(".pagin").html(context.PageN);//输出分页按钮
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    $.messager.alert("操作提示", '查询失败请重试！', 'error');
                }
            }
            $('#form1').ajaxSubmit(options);
            return false;
        }

         //产品状态显示
        function showcpzt(val,ycyy)
        {
            var str;
            if(val=="0")
            {
                str="正常";
            }
            if(val=="1")
            {
                str='<span style="color:red">异常 ('+ycyy+')</span>'
            }
            if(val=="2")
            {
                str='<span style="color:#00ff21">待审核</span>';
            }
            if(val=="3")
            {
                str='<span style="color:red">未提交 </span>'
            }
            return str;
        }

        //操作按钮显示
        function czbtnshow(val)
        {
            var Id="'"+val+"'";
            var t = '<a class="layui-btn layui-btn-primary layui-btn-small" onclick="ZGDZURL('+Id +')">整改</a>';
            var z='<a class="layui-btn layui-btn-primary layui-btn-small" onclick="ziliaochakan('+Id+')">资料查看</a>';
            return t+z;
        }

        //整改页面
        function ZGDZURL(val)
        {
            layer.open({
                type: 2,
                title: ['整改提交', 'font-size:14px;'],
                area: ['500px', '350px'],
                offset: '10px',
                fixed: false, //不固定
                maxmin: true,
                content: '../DKX_DDtypeinfo/PBDKXCPZGView?Id='+val,
                //end: function () {
                //    location.reload();
                //}
            })
        }

        //资料查看
        function ziliaochakan(val)
        {
            layer.open({
                type: 2,
                title: ['资料查看', 'font-size:14px;'],
                area: ['900px', '450px'],
                offset: '10px',
                fixed: false, //不固定
                maxmin: true,
                content: '../DKX_DDtypeinfo/FAKzlckView?Id='+val,
                //end: function () {
                //    location.reload();
                //}
            })
        }

        //方案引用次数
        function Show_references_Number(ItemNo)
        {
            layer.open({
                type: 2,
                title: ['方案引用情况', 'font-size:14px;'],
                area: ['900px', '450px'],
                offset: '10px',
                fixed: false, //不固定
                maxmin: true,
                content: '../DKX_DDtypeinfo/Scheme_order_detailsView?ItemNo=' + ItemNo,
            })
        }

        //电控箱类型显示
        function showddtype(val,val2){
            var jsonstr=@Html.Raw(ViewBag.MyJson);
            var str;
            if(jsonstr!=null){
                for (var i = 0;i <jsonstr.length; i++) {
                    if(jsonstr[i].Type==val)
                    {
                        str=jsonstr[i].Name;
                        return str;
                    }
                }
            }
        }

        //入库产品删除
        function cpdel(val) {
          
            $.messager.confirm("操作提示", '确定要删除该方案吗？', function (data) {
                if (data) {
                    var cpId = val;//产品Id
                  
                    $.ajax({
                        url: "../DKX_DDtypeinfo/New_del_rkcp",
                        type: "POST",
                        data: { Id: cpId },
                        dataType: "json",
                        async: true,
                        beforeSend: function () {
                            ddchen();
                        },
                        success: function (response) {
                            disLoading();
                            if (response.result == "success") {
                                layer.alert(response.msg, { icon: 1 });
                                Reload_laypage("test");
                                
                            }
                            if (response.result == "error") {
                                layer.alert(response.msg, { icon: 2 });
                                Reload_laypage("test");
                            }
                            
                        },
                        error: function (e) {
                            disLoading();
                            layer.alert("操作失败！", { icon: 2 });
                        }
                    })
                }
            })
        }

        var loadi;
        function ddchen() {
            loadi = layer.load(1, { shade: [0.8, '#393D49'] })
        }
        //关闭等待效果
        function disLoading() {
            layer.close(loadi);
        }


        //根据工程师导出数据
        function exportexcel() {
            //var txtGcs_name = $("#txtGcs_name").val();
            //if (txtGcs_name == "" || txtGcs_name == null) {
            //    layer.alert("请选择工程师！", { icon: 2 });
            //    return false;
            //}
            var type;
            layer.open({
                type: 1,
                offset: type //具体配置参考：http://www.layui.com/doc/modules/layer.html#offset
                , id: 'layerDemo' + type //防止重复弹出
                , content: '<div style="padding: 20px 100px;">确定要导出数据吗 </div>'
                , btn: ['数据导出', '关闭']
                , btnAlign: 'c' //按钮居中
                , shade: 0 //不显示遮罩
                , yes: function () {
                    console.log('111111')
                    window.location.href = "/DKX_DDtypeinfo/dc_fangandata_yycs";
                    layer.closeAll();
                }
            });
        }
    </script>

    <script type="text/html" id="bar">
        <div class="layui-btn-group">
            <button type="button" class="layui-btn  layui-btn-xs layui-btn-normal" lay-event="Ediezg" title="整改">
                <i class="layui-icon">&#xe642;</i>
            </button>
            <button type="button" class="layui-btn  layui-btn-xs layui-btn-warm" lay-event="showzl" title="资料查看">
                <i class="layui-icon">&#xe63c;</i>
            </button>
            <button type="button" class="layui-btn  layui-btn-xs layui-btn-danger" lay-event="del" title="删除">
                <i class="layui-icon">&#xe640;</i>
            </button>
            {{# if(d.Ps_wlBomNO!=""&&d.Ps_wlBomNO!=null){}}
            <button type="button" class="layui-btn  layui-btn-xs layui-btn-warm" lay-event="showyy" title="方案引用情况">
                <i class="layui-icon">&#xe63c;</i>
            </button>
            {{# } }}
        </div>
    </script>
}




