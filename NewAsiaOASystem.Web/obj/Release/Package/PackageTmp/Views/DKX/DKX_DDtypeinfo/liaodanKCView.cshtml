                    DJMancg(YQJBM, YQJname, YQJxh, shuliang);
                }
            })
        }
        if (str == "1") {
            alert("订单采购中。。。");
        }
        if (str == "2") {
            Mancg(YQJBM, YQJname, YQJxh, shuliang)
        }
    }

