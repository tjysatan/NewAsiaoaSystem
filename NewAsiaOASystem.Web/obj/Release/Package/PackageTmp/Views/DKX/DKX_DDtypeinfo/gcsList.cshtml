@model NewAsiaOASystem.ViewModel.PagerInfo<NewAsiaOASystem.ViewModel.DKX_GCSinfoView>
@{
    ViewBag.Title = "电气工程师数据列表";
    Layout = "~/Views/Shared/_SysLayout.cshtml";
}

@section HeadContent{
    <script type="text/javascript">
        $(function () {
            BindGrid();
        })
        function BindGrid() {
            @{
                if (null != Model && null != Model.GetPagingDataJson)
                {
                    string json = Model.GetPagingDataJson;//获取json数据
                    @: var jsonStr = @Html.Raw(json);
                }
             }
            dataGrid(jsonStr);
        }

        function dataGrid(jsonStr){
            if (typeof (jsonStr) != "undefined") {
                var html = "";
                html = '<table class="layui-table">';
                html += '<thead>';
                html+='<tr style="font-weight:bold;color:#000000">';
                html+='<td width="5%"><input type="checkbox" name="TopChecked" value="0" onclick="TopChecked()" /></td>';
                html+='<td width="5%">排序</td>';
                html += '<td width="15%">工程师</td>';
                html += '<td width="15%">团队</td>';
                html+='<td width="10%">帐号</td>';
                html+='<td width="10%">电话</td>';
                html+='<td width="10%">是否启用</td>';
                html+='<td width="20%">操作</td>';
                html+='</tr>';
                html+='</thead>';
                for (var i = 0, j = jsonStr.length; i < j; i++)
                {
                    html+='<tr>';
                    html += '<td width="5%"><input type="checkbox" name="ContentChecked" value="' + jsonStr[i].Id + '"/></td>';
                    html+='<td width="5%">'+jsonStr[i].Sort+'</td>';
                    html += '<td width="15%">' + jsonStr[i].Name + '</td>';
                    html += '<td width="15%">' + jsonStr[i].Teamname + '</td>';
                    html+='<td width="10%">'+GetzhanghaojsonbyId(jsonStr[i].ZH_Id)+'</td>';
                    html+='<td width="10%">'+jsonStr[i].Tel+'</td>';
                    if(jsonStr[i].Start=="0")
                        html+='<td width="10%">启用</td>';
                    else
                        html+='<td width="10%">禁用</td>';
                    html+='<td width="20%">-</td>';
                    html+='</tr>';
                }
                html += '</table>';
                $("#content").html(html);
            }
        }
        function SerchList(pageIndex)
        {
            $("input[name='pageIndex']").val(pageIndex);
            var options = {
                beforeSubmit: function () {
                    return true;
                },
                dataType: "json",
                success: function (context) {
                    var data=eval(context.result);
                    dataGrid(data);
                    $(".pagin").html(context.PageN);//输出分页按钮
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    $.messager.alert("操作提示", '查询失败请重试！', 'error');
                }
            }
            $('#form1').ajaxSubmit(options);
            return false;
        }

        //查找帐号的数据
        function GetzhanghaojsonbyId(val)
        {
            var json;
            $.ajax({
                type: "POST",
                url: "../DKX_DDtypeinfo/Getzhanhaoinfojson",
                data: {Id: val },
                dataType: "json",
                async: false,
                success: function (context) {
                    json=context;
                    if(json!=null&&json!="")
                    {
                        json=json.Name;

                    }
                },
                error: function (e) {
                    alert("请求失败");
                }
            })
            return json;
        }
    </script>
}


<div class="h-right">
    <div class="h-right-c">
        <!--查询条件-->

        <div class="inquiry1">
            <fieldset>
                <legend>查询条件：</legend>
                @using (Html.BeginForm("gcsSearchList", "DKX_DDtypeinfo", FormMethod.Post, new { id = "form1" }))
                {
                    @Html.Hidden("pageIndex");
                    <ul>
                        <li>
                            <span>工程师：</span>
                            <span class="inquiry-input">
                                <input type="text" name="txt_name" id="txt_name" />
                            </span>
                        </li>
                        <li>
                            <span>帐号：</span>
                            <span class="inquiry-input">
                                <input type="text" name="txt_zhname" id="txt_zhname" />
                            </span>
                        </li>
                        <li>
                            <span>电话：</span>
                            <span class="inquiry-input">
                                <input type="text" name="txt_tel" id="txt_tel" />
                            </span>
                        </li>
                        <li>
                            <span>是否启用：</span>
                            <span class="inquiry-input">
                                <select id="txt_start" name="txt_start">
                                    <option value="0">启用</option>
                                    <option value="1">禁用</option>
                                </select>
                            </span>
                        </li>
                        <li style="*width: 100%; *margin: -10px 0 5px 90px;"><span class="inquiry-input">
                            <button name="btnSerch" class="layui-btn" onclick="return SerchList(1)"><i class="layui-icon">&#xe615;</i>查询</button>
                        </span>
                        </li>


                        <li>
                            <span class="inquiry-input">
                                <button class="layui-btn" onclick="return addClick('/DKX_DDtypeinfo/addPagegcs')" id="parentIframe"><i class="layui-icon">&#xe608;</i> 新建</button>
                            </span>
                            <span class="inquiry-input">
                                <button class="layui-btn" onclick="return update('/DKX_DDtypeinfo/EditPagegcs')"><i class="layui-icon">&#xe620;</i> 编辑</button>
                            </span>
                            <span class="inquiry-input">
                                <button class="layui-btn" onclick="return addClick('/DKX_DDtypeinfo/gcsList')"><i class="layui-icon">&#x1002;</i>刷新</button></span>
                        </li>
                    </ul>
                }
            </fieldset>
        </div>


        <div class="h-table">
            <div class="h-table-content" style="color: #9d9999;">
                <div id="content"></div>
            </div>
        </div>
    </div>
</div>

<!--==========================输出分页按钮=========================-->
<div class="pagin">
    @if (ViewBag.PageNavigate == null)
    {
        @Html.ShowPageNavigate(Model.CurrentPageIndex, Model.PageSize, Model.RecordCount);
    }
</div>

