<script type="text/javascript">
    function guanbi() {
        var index = parent.layer.getFrameIndex(window.name);
        //关闭弹出层
        parent.layer.close(index);
    }
    var loadi;
    function ddchen() {
        loadi = layer.load(1, { shade: [0.8, '#393D49'] })
    }
    //关闭等待效果
    function disLoading() {
        layer.close(loadi);
    }
    //表单提交
    function weixinAjaxform() {

        var khname = $("#khname").val();//客户名称
        var lxrname = $("#lxrname").val();//客户联系人
        var tel = $("#tel").val();//联系电话
        var dkxtype = $("#dkxtype").val();//订单类型
        var ddxh = $("#ddxh").val();//订单型号
        var gl = $("#gl").val();//功率
        var dw = $("#dw").val();//功率单位
        var sl = $("#sl").val();//数量
        var price = $("#price").val();//合同单位售价
        var gnjsstr = $("#gnjsstr").val();//功能简述
        var Ps_sanduanno = $("#Ps_sanduanno").val();
        var txt_startctime = $("#txt_startctime").val();//承若交期
        if (Ps_sanduanno == "") {
            layer.alert("选择产品类型！", { icon: 2 });
            return false;
        }
        if (khname == "") {
            layer.alert("客户名称不为空！", { icon: 2 });
            return false;
        }

        if (dkxtype == "") {
            layer.alert("请选择订单类型！", { icon: 2 });
            return false;
        }
        if (ddxh == "") {
            layer.alert("请填写订单型号！", { icon: 2 });
            return false;
        }
        if (gl == "") {
            layer.alert("请填写功率！", { icon: 2 });
            return false;
        }

        if (Ps_sanduanno != "0") {
            if (price == "") {
                layer.alert("单价不为空！", { icon: 2 });
                return false;
            } else {
                if (isNaN(price)) {
                    layer.alert("合同单位售价请填写数字！", { icon: 2 });
                    return false;
                }
            }
        }

        if (sl == "") {
            layer.alert("请填写数量！", { icon: 2 });
            return false;
        }
        if (isNaN(sl)) {
            layer.alert("数量为纯数字！", { icon: 2 });
            return false;
        }
        if (gnjsstr == "") {
            layer.alert("功能简述不为空（K3bom编号）！", { icon: 2 });
            return false;
        }
        if (txt_startctime == "") {
            layer.alert("需求日期不为空！", { icon: 2 });
            return false;
        }

        //表单验证
        var options = {
            beforeSubmit: function () {
                ddchen();
                //return true;
            },
            dataType: "json",//这里是指控制器处理后返回的类型，这里返回json格式。
            success: function (context) {
                disLoading();
                if (context.result == "success") {
                    layer.alert(context.res, { icon: 1 }, function () { guanbi(); });
                }
                if (context.result == "error") {
                    layer.alert(context.res, { icon: 2 }, function () { location.reload(); });
                }
               
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                $.messager.alert("操作提示", '操作失败！', 'error');
            }
        }
        $('#form1').ajaxSubmit(options);
        return false; //为了不刷新页面,返回false
    }
</script>