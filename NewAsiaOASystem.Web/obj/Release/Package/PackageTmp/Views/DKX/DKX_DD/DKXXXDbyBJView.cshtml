    function oninputajax() {
        var khname = $("#khname").val();

        //赋值
        var json = AjaxGetCusinfo(khname);
        if (json == "" || json == null) {
            $("#lxrname").val("");
            $("#tel").val("");
            $("#K3CODE").val("");
        }
        else {
            $("#lxrname").val(json.LxrName);
