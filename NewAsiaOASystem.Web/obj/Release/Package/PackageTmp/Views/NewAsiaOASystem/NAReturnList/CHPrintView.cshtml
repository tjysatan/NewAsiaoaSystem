            html += ' <table style="width: 100%;">';
            html += '<tr>';
            html += '<td style="width:25%;">客户签字：</td>';
            html += '<td style="width:25%;">仓库员：</td>';
            html += '<td style="width:25%;">业务员：</td>';
            html += '<td style="width:25%;">开单人：' + AjaxPerson_Name('@ViewData["kfzy"]').UserName + '</td>';
            html += '</tr>';

            html += '</table>';
            html += '</div>';
        }
        $("#Htmlcon").html(html);
    }

    /*根据返退货Id 查找出货明细*/
    function jxkhjgck(R_Id) {
        var json;
        $.ajax({
            type: "POST",
            url: "/NQ_CHdetailinfo/GetchinfobyRId",
            data: {
                R_Id: R_Id
            },
            dataType: "json",
            async: false,
            success: function (reslut) {
                json = reslut;
            },
            error: function (e) {
                alert("请求失败");
            }
        })
        return json;
    }

    /*根据产品Id 查找产品信息*/
    function GetPerinfobyId(Id) {
        var json;
        $.ajax({
            type: "POST",
            url: "/NQ_CHdetailinfo/GetPreinfobyId",
            data: { ID: Id },
            dataType: "json",
            async: false,
            success: function (reslut) {
                json = reslut;
            },
            error: function (e) {
                alert("请求失败！");
            }
        })
        return json;
    }

