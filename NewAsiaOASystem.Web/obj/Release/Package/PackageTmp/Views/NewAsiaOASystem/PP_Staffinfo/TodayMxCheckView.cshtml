@{
    ViewBag.Title = "当天收入支出明细查看";
    Layout = "~/Views/Shared/_SysLayout.cshtml";
}

<style>
    .table_con
    {
        border-collapse: collapse;
        border: none;
    }

        .table_con td
        {
            border: solid #eae5e5 1px;
            height: 35px;
            padding: 0 0 0 5px;
            font-size:12px;
        }

    .btnspan button
    {
        width: 120px;
        height: 30px;
        background: #337CA8;
    }
</style>
<script type="text/javascript">
    $(function () {
        AjaxshouruzhichujsonbystaffId('@ViewData["stafId"]', "0");
        AjaxshouruzhichujsonbystaffId('@ViewData["stafId"]', "1");
        var yinli = @ViewData["shouru"] - @ViewData["zhichu"];
       
        $("#yingli").html("当月盈利："+yinli+"元");
    })
</script>
<!--title-->
<div>

    <table class="table_con" style="width:90%;margin-left: 25px;">
        <tr>
            <td style="font-size:12px;">当月收入和支出查看</td><td>当月收入：@ViewData["shouru"] 元</td><td>当月支出：@ViewData["zhichu"] 元</td><td id="yingli"></td>
        </tr>
         
    </table>
</div>

<div id="ProManage" class="easyui-tabs" style="width: 90%; height: 320px; margin: 20px; padding: 0px;">
    <div id="shouruButtonAuth" title="收入明细" style="overflow: auto; padding: 20px;">

    </div>
    <div id="zhichuButtonAuth" title="支出明细" style="overflow: auto; padding: 20px;">
    </div>
</div>
<div style="text-align: center;width:100%;">
    <a href="javascript:void(0)" class="easyui-linkbutton" onclick="AddshouruMxJson('@ViewData["stafId"]')">收入项增加</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" onclick="AddzhichuMxjson('@ViewData["stafId"]')">支出项增加</a>
</div>
<script src="~/Scripts/NAjs/PP_pulice.js"></script>

<div id="windowDia" class="easyui-window" closed="true" style="width: 100%; height: 400px; padding: 5px;"></div>