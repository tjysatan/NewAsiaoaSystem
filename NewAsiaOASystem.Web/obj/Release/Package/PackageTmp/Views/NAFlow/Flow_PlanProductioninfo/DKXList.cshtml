                    <tr>
                        <td width="5%">
                            <input type="checkbox" name="TopChecked" value="0" onclick="TopChecked()" /></td>
                        <td width="10%">编号</td>
                        <td width="10%">产品名称</td>
                        <td width="10%">代码</td>
                        <td width="5%">生产数量</td>
                        <td width="8%">状态</td>
                        <td width="8%">创建时间</td>
                        <td width="8%">类别</td>
                        <td width="8%">预计完成</td>
                        <td width="8%">实际完成</td>
                        <td width="25%">操作</td>
                    </tr>
                </table>
                <div id="content"></div>
            </div>
        </div>
    </div>
</div>


<!--==========================输出分页按钮=========================-->
<div class="pagin">
    @if (ViewBag.PageNavigate == null)
    {
        @Html.ShowPageNavigate(Model.CurrentPageIndex, Model.PageSize, Model.RecordCount);
    }
</div>

