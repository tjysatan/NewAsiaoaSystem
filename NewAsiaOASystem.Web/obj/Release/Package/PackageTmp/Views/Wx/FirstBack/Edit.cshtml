@model NewAsiaOASystem.ViewModel.WX_MessageView
@{
    ViewBag.Title = "关键字回复编辑";
    Layout = "~/Views/Shared/_SysLayout.cshtml";
}
@section HeadContent{
    <script type="text/javascript">
        $(function () {
            if ("" == $("#Id").val())
                $("#Ptitle").text("关键词添加");
            else
                $("#Ptitle").text("关键词编辑"); 
        })
    </script>
    }
 @using (Html.BeginForm("Edit", "FirstBack", FormMethod.Post, new { id = "form1" }))
  {         
    @Html.HiddenFor(m => m.A_CreateTime);
    @Html.HiddenFor(m => m.A_CreateUser)
    @Html.HiddenFor(m => m.A_id)
    @Html.HiddenFor(m=>m.MsgType)
     
    <div class="infor">
        @*<div class="h-right-title">您当前的位置：关键字回复</div>*@
        <p id="Ptitle"></p>
        <div class="system-menu-set">
            <ul class="infor-c">
                <li><span class="infor-c-width">关键词：</span><span class="infor-c-input">
                    @Html.TextBoxFor(m => m.A_KeyWord)</span>
                      <span style="color:red;font-size:24px;vertical-align: middle;margin-left: 8px;">*</span><span class="desc w-register">关键字不为空！</span>

                </li>
            </ul>
            <ul class="infor-c ">
                <li><span class="infor-c-width">回复内容：</span>
                    <span class="infor-c-input">
                       @Html.TextAreaFor(m => m.A_Content, new { })
                    </span>
                      <span style="color:red;font-size:24px;vertical-align: middle;margin-left: 8px;">*</span><span class="desc w-register">回复内容不为空！</span>
                </li>
            </ul>
            <ul class="infor-c">
                <li><span class="infor-c-width">是否默认：</span>
                    <span>
                        <select class="add-function" name="IsDefaultMessage">
                            @{
                           if ("False".Equals(Convert.ToString(@Model.IsDefaultMessage)) && null != @Model.A_id)
                                      {
                                @:<option value="True">是</option>
                                @:<option value="False" selected="selected">否</option>
                                                }
                                      else
                                      {
                                @:<option value="True"  selected="selected">是</option>
                                @:<option value="False">否</option>
                                      }
                                                
                            }

                        </select></span></li>
            </ul>
                       
        </div>
        <div class="inquiry-input infor-b"><span><button onclick="return SavaForm('/FirstBack/Index')">保存</button></span><span><button onclick="return RedirectUrl('/FirstBack/Index')">返回</button></span></div>
    </div>
}
 <script src="~/Scripts/WX/Massage.js"></script>

    
